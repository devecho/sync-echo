<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="se-persistence">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>de.devsurf.echo.sync.providers.persistence.ProviderEntity</class>
		<class>de.devsurf.echo.sync.providers.persistence.ProviderAuthenticationEntity</class>
		<class>de.devsurf.echo.sync.providers.persistence.ProviderAuthenticationFieldEntity</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:${java.io.tmpdir}/sync-echo.db" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>

</persistence>